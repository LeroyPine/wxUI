.piece {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.case-piece {
   width: 95%;
  height: 330rpx;
  margin-top: 10rpx;
  background-color: rgba(223, 215, 215, 0.411);
  display: flex;
  position: relative;
  flex-direction: column; 
  font-size: 28rpx;
  display: -webkit-box;
  white-space: nowrap;
  -webkit-box-orient: vertical;
}

.detail-image{
  width: 100%;
  height: 210rpx;
}

.case-comment {
  margin-top: 10rpx;
  width: 100%;
  height: 150rpx;
  background-color: rgba(223, 215, 215, 0.411);
  display: flex;
  position: relative;
  flex-direction: column; 
  font-size: 28rpx;
  display: -webkit-box;
  white-space: nowrap;
  -webkit-box-orient: vertical;
}

